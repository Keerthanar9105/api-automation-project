							"\r",
							"pm.test(\"Response has correct name and username\", function(){\r",
							"    var jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.name).to.eql(\"Keerthana\");\r",
							"    pm.expect(jsonData.username).to.eql(\"keerthana123\");\r",
							"    pm.expect(jsonData.id).to.be.a(\"number\"); // id should be generated\r",
							"});\r",
							"\r",
							"var jsonData = pm.response.json();\r",
							"pm.environment.set(\"userId\", jsonData.id);"
